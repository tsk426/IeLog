<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="fw-bold mb-4 text-center">💬 コメント一覧</h2>

    <% if @comments.any? %>
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>コメント内容</th>
            <th>投稿日時</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.id %></td>
              <td><%= comment.user.name %></td>
              <td><%= truncate(comment.body, length: 50) %></td>
              <td><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td>
                <%= link_to "詳細", admin_user_path(comment.user), class: "btn btn-sm btn-outline-info" %>
                <%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger ms-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-muted">コメントが存在しません。</p>
    <% end %>
  </div>
</div>

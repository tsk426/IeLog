<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="fw-bold mb-4 text-center">👥 ユーザー一覧</h2>

    <!-- 一般ユーザーの表示 -->
    <% if @users.any? %>
      <h3>一般ユーザー</h3>
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>登録日</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
              <td class="text-nowrap">
                <%= link_to "詳細", admin_user_path(user), class: "btn btn-sm btn-outline-info" %>
    
                <%# どちらでもOK: button_to (JS不要で確実) か link_to + turbo_method %>
                <%= button_to "削除",
                      admin_user_path(user),
                      method: :delete,
                      form: { data: { turbo_confirm: "本当に削除しますか？" }, class: "d-inline" },
                      class: "btn btn-sm btn-outline-danger ms-2" %>
                <%# または:
                <%= link_to "削除", admin_user_path(user),
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "btn btn-sm btn-outline-danger ms-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-muted">一般ユーザーが存在しません。</p>
    <% end %>
    
    <!-- 管理者ユーザーの表示 -->
    <% if @admins.any? %>
      <h3>管理者ユーザー</h3>
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>メールアドレス</th>
            <th>登録日</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <td><%= admin.created_at.strftime("%Y/%m/%d") %></td>

              <td class="text-nowrap">
                <%# 管理者に「詳細」は出さない（show なし） %>
    
                <%# 削除だけ。必ず admin_admin_path を DELETE で叩く %>
                <%= button_to "削除",
                      admin_admin_path(admin),
                      method: :delete,
                      form: { data: { turbo_confirm: "本当に削除しますか？" }, class: "d-inline" },
                      class: "btn btn-sm btn-outline-danger" %>
                <%# または:
                <%= link_to "削除", admin_admin_path(admin),
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-muted">管理者ユーザーが存在しません。</p>
    <% end %>

  </div>
</div>

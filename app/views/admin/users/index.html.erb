<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="fw-bold mb-4 text-center">👥 ユーザー一覧</h2>

    <% if @users.any? %>
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>登録日</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                <%= link_to "詳細", admin_user_path(user), class: "btn btn-sm btn-outline-info" %>
                <%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger ms-2" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-muted">ユーザーが存在しません。</p>
    <% end %>
  </div>
</div>

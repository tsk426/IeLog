<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="mb-4 text-center">アカウント情報の編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">
          現在確認待ちのメールアドレス: <strong><%= resource.unconfirmed_email %></strong>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %>文字以上</small>
        <% end %>
        <small class="form-text text-muted">※空欄のままであれば変更されません</small>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
        <small class="form-text text-muted">※変更を反映するには現在のパスワードが必要です</small>
      </div>

      <div class="text-center">
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    <% end %>

    <hr class="my-4">

    <h5 class="text-danger">アカウントの削除</h5>
    <div class="mb-3">
      <%= button_to "アカウントを削除する", registration_path(resource_name),
            method: :delete,
            data: { confirm: "本当にアカウントを削除しますか？" },
            class: "btn btn-outline-danger" %>
    </div>

    <div>
      <%= link_to "戻る", request.referer || root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
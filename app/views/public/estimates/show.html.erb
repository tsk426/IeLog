<div class="container mt-5">
  <h2 class="mb-4">見積もりの詳細</h2>

  <div class="card shadow">
    <div class="card-body">

      <div class="mb-3">
        <h5 class="fw-bold">建物グレード</h5>
        <p class="mb-0"><%= @estimate.grade.capitalize %></p>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">階数</h5>
        <p class="mb-0">
          <%=
            case @estimate.floor_type
            when '1f' then '平屋'
            when '2f' then '2階建て'
            when '3f' then '3階建て'
            else @estimate.floor_type
            end
          %>
        </p>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">坪数</h5>
        <p class="mb-0"><%= @estimate.tsubo %> 坪</p>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">土地価格</h5>
        <p class="mb-0"><%= number_with_delimiter(@estimate.land_price) %> 万円</p>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">建物価格</h5>
        <p class="mb-0"><%= number_with_delimiter(@estimate.building_price) %> 万円</p>
      </div>

      <div class="mb-3">
        <h5 class="fw-bold">合計金額</h5>
        <div class="alert alert-info fw-bold fs-5">
          <%= number_with_delimiter(@estimate.total_price) %> 万円
        </div>
        <p class="text-muted">※ インフラ・外構工事費（600万円）含む</p>
      </div>

      <% if @estimate.tag_list.present? %>
        <div class="mb-3">
          <h5 class="fw-bold">選択された条件</h5>
          <ul class="list-group">
            <% @estimate.tag_list.each do |tag| %>
              <li class="list-group-item"><%= tag %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mt-4 d-flex gap-2">
        <%= link_to '戻る', estimates_path, class: 'btn btn-secondary' %>

        <%= button_to '削除する', estimate_path(@estimate), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
      </div>

      
    </div>
  </div>
</div>

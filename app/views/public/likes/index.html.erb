<div class="container mt-5">
  <h2 class="mb-4 text-center">いいねした投稿一覧</h2>

  <% if @liked_reviews.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @liked_reviews.each do |review| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to review.title, review_path(review), class: "text-decoration-none" %>
              </h5>
              <p class="card-text text-muted">
                <%= truncate(review.body, length: 100) %>
              </p>
              <ul class="list-unstyled small">
                <li>都道府県：<%= review.prefecture_code %></li>
                <li>建物価格：<%= number_with_delimiter(review.house_budget) %> 万円</li>
                <li>土地価格：<%= number_with_delimiter(review.land_budget) %> 万円</li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4">
      まだいいねした投稿がありません。
    </div>
  <% end %>
</div>

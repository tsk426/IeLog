<div class="container mt-5">
  <h2 class="mb-4">プロフィール編集</h2>

  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :phone_number, "電話番号" %>
      <%= f.telephone_field :phone_number, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "新しいパスワード（変更する場合）" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="mt-4">
      <%= f.submit "更新する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<div class="container mt-5">
  <div class="card shadow p-4" style="max-width: 600px; margin: 0 auto; background-color: rgba(255,255,255,0.95);">
    <div class="card-body">
      <h2 class="fw-bold mb-4 text-center">👥 ユーザー一覧</h2>

      <% if @users.any? %>
        <ul class="list-group">
          <% @users.each do |user| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to user.name, user_path(user), class: "text-decoration-none" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted text-center">現在、登録されているユーザーはいません。</p>
      <% end %>
    </div>
  </div>
</div>
